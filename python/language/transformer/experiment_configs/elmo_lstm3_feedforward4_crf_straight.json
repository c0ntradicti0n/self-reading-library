{
  "data_loader": {
    "batch_size": 32
  },
  "dataset_reader": {
    "type": "conll2003",
    "tag_label": "ner",
    "coding_scheme": "BIOUL",
    "token_indexers": {
      "elmo": {
        "type": "elmo_characters"
      },
      "token_characters": {
        "type": "characters",
        "min_padding_length": 3
      }
    }
  },
  "train_data_path": ".layouteagle/elmo_difference_collection/train_over.conll3",
  "validation_data_path": ".layouteagle/elmo_difference_collection/test_over.conll3",
  "model": {
    "type": "crf_tagger",
    "label_encoding": "BIOUL",
    "regularizer": {
      "regexes": [
        [
          "scalar_parameters",
          {
            "alpha": 0.001,
            "type": "l2"
          }
        ]
      ]
    },
    "calculate_span_f1": true,
    "constrain_crf_decoding": true,
    "dropout": 0.5,
    "encoder": {
      "type": "stacked_bidirectional_lstm",
      "hidden_size": 200,
      "input_size": 1152,
      "num_layers": 2,
      "recurrent_dropout_probability": 0.5,
      "use_highway": true
    },
    "feedforward": {
      "activations": "tanh",
      "dropout": 0.5,
      "hidden_dims": 400,
      "input_dim": 400,
      "num_layers": 1
    },
    "include_start_end_transitions": false,
    "text_field_embedder": {
      "token_embedders": {
        "elmo": {
          "type": "elmo_token_embedder",
          "do_layer_norm": false,
          "dropout": 0.0,
          "options_file": ".layouteagle/elmo_difference_models/elmo_2x4096_512_2048cnn_2xhighway_options.json",
          "weight_file": ".layouteagle/elmo_difference_models/elmo_2x4096_512_2048cnn_2xhighway_weights.hdf5"
            },
        "token_characters": {
          "type": "character_encoding",
          "embedding": {
            "embedding_dim": 16,
            "vocab_namespace": "token_characters"
          },
          "encoder": {
            "type": "cnn",
            "embedding_dim": 16,
            "num_filters": 128,
            "ngram_filter_sizes": [
              3
            ],
            "conv_layer_activation": "relu"
          }
        }
      }
    }
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.003
    },
    "histogram_interval": 10,
    "shuffle": true,
    "validation_metric": "+f1-measure-overall",
    "num_serialized_models_to_keep": 5,
    "num_epochs": 100,
    "grad_norm": 1.0,
    "patience": 20,
    "cuda_device": -1
  }
}
