{
    "dataset_reader": {
        "type": "conll2003",
        "coding_scheme": "BIOUL",
        "tag_label": "ner",
        "token_indexers": {
            "elmo": {
                "type": "elmo_characters"
            },
            "token_characters": {
                "type": "characters",
                "min_padding_length": 3
            }
        }
    },
    "iterator": {
        "type": "basic",
        "batch_size": 64
    },
    "model": {
        "type": "attentive_crf_tagger",
        "calculate_span_f1": true,
        "constrain_crf_decoding": true,
        "dropout": 0.5,
        "encoder": {
            "type": "multi_head_self_attention",
            "attention_dim": 100,
            "attention_dropout_prob": 0.5,
            "input_dim": 662,
            "num_heads": 50,
            "values_dim": 100
        },
        "feedforward": {
            "activations": "relu",
            "hidden_dims": [
                200,
                200,
                200,
                200,
                200,
                200,
                200
            ],
            "input_dim": 662,
            "num_layers": 7
        },
        "include_start_end_transitions": false,
        "label_encoding": "BIOUL",
        "regularizer": [
            [
                "scalar_parameters",
                {
                    "alpha": 0.1,
                    "type": "l2"
                }
            ]
        ],
        "text_field_embedder": {
            "token_embedders": {
                "elmo": {
                    "type": "elmo_token_embedder",
                    "do_layer_norm": false,
                    "dropout": 0,
                    "options_file": "nlp/TransformerStuff/models/elmo_2x2048_256_2048cnn_1xhighway_options.json",
                    "weight_file": "nlp/TransformerStuff/models/elmo_2x2048_256_2048cnn_1xhighway_weights.hdf5"
                },
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 16
                    },
                    "encoder": {
                        "type": "cnn",
                        "conv_layer_activation": "relu",
                        "embedding_dim": 16,
                        "ngram_filter_sizes": [
                            4
                        ],
                        "num_filters": 150
                    }
                }
            }
        }
    },
    "train_data_path": "nlp/TransformerStuff/manual_corpus/train_first.conll3",
    "validation_data_path": "nlp/TransformerStuff/manual_corpus/test_first.conll3",
    "trainer": {
        "cuda_device": 0,
        "grad_norm": 1,
        "histogram_interval": 10,
        "num_epochs": 200,
        "num_serialized_models_to_keep": 70,
        "optimizer": {
            "type": "adam",
            "lr": 0.003
        },
        "patience": 100,
        "shuffle": true,
        "validation_metric": "+f1-measure-overall"
    }
}